#include "khg_aud/utils.h"
#include "khg_utl/types.h"
#include <stdint.h>

aud_audio_stream aud_init_audio_stream(uint32_t sample_rate, uint32_t sample_size, uint32_t channels);
void aud_update_audio_stream(aud_audio_stream stream, const void *data, uint32_t samples_count);
void aud_close_audio_stream(aud_audio_stream stream);
bool aud_is_audio_stream_processed(aud_audio_stream stream);
void aud_play_audio_stream(aud_audio_stream stream);
void aud_pause_audio_stream(aud_audio_stream stream);
void aud_resume_audio_stream(aud_audio_stream stream);
bool aud_is_audio_stream_playing(aud_audio_stream stream);
void aud_stop_audio_stream(aud_audio_stream stream);
void aud_set_audio_stream_volume(aud_audio_stream stream, float32_t volume);
void aud_set_audio_stream_pitch(aud_audio_stream stream, float32_t pitch);
void aud_set_audiostream_buffer_size_default(uint32_t size);
